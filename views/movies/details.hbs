<div class="card mb-3">
 <div class="row no-gutters">
   <div class="col-md-2">
     <img src="{{ movie.image }}" class="card-img" alt="{{ movie.title }}">
   </div>
   <div class="col-md-8">
     <div class="card-body">
       <h1 class="card-title">{{ movie.title }}</h1>
       <h3 class="card-title">Director: {{ movie.director }}</h3>
       <ul>Stars</ul>
        {{#each movie.stars as |stars|}}
       <li>{{ stars }}
         </li>
        {{/each}}
       <p class="card-text">{{ movie.description }}</p>
       <p class="card-text">
         <small class="text-muted">
         {{#each movie.director as |director|}}
           {{ director }}
         {{/each}}
         </small>
       </p> 
       {{#each movie.showtimes as |showtimes|}}
      <span class="card-title">{{ showtimes }} |</span>
      {{/each}}
     </div>
   </div>
 </div>
</div>